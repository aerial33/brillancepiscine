---
// Data import
import navData from "../data/navData"
import Button from "../components/Button.astro"
import { Icon } from "astro-icon"
---

<header
	class="fixed left-0 top-0 z-20 w-full border-b border-stroke/5 bg-white/30 backdrop-blur-sm">
	<div
		class="container mx-auto flex flex-wrap items-center justify-between p-4">
		<a href="/" class="flex items-center">
			<Icon
				name="logo-douceur-light"
				class="mr-3 h-12 md:h-18 lg:h-20"
				alt="Flowbite Logo"
			/>
		</a>
		<div class="flex md:order-2">
			<Button type="button">CONTACT</Button>
			<button
				id="menu"
				aria-expanded="false"
				aria-label="open menu"
				class="text-gray-500 hover:bg-gray-100 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 ml-3 inline-flex items-center rounded-lg p-2 text-sm focus:outline-none focus:ring-2 md:hidden">
				<svg
					class="h-6 w-6"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M4 6h16M4 12h16m-7 6h7"></path>
				</svg>
			</button>
		</div>
		<div
			role="menubar"
			class="hidden w-full items-center justify-between md:order-1 lg:flex lg:w-auto">
			<ul
				class="dark:border-gray-200 mt-4 flex flex-col rounded-lg border border-stroke/10 bg-whiten p-4 font-medium md:mt-0 md:flex-row md:space-x-8 md:border-0 md:bg-white md:p-0"
				id="dropdown">
				{
					navData.map(link => (
						<a
							href={link.path}
							class="block rounded py-2 pl-3 pr-4 text-black hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-700 dark:hover:text-white  md:p-0 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:bg-transparent"
							data-navlink>
							{link.name}
						</a>
					))
				}
				<!-- <li>
					<a
						href='#'
						class='block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
						aria-current='page'>Home</a
					>
				</li> -->

				<!-- <li>
					<a
						href='#'
						class='block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700'
						>Contact</a
					>
				</li> -->
			</ul>
		</div>
	</div>
</header>

<script>
	const navBtn = document.getElementById("menu")
	const menuBar = document.querySelector('[role="menubar"]')
	const header = document.querySelector("header")

	window.addEventListener("scroll", () => {
		const isScrolled = window.pageYOffset > 20
		console.log(isScrolled)
		header.classList.toggle("bg-black shadow !py-4", !isScrolled)
	})

	navBtn.addEventListener("click", () => {
		menuBar.classList.toggle("hidden")
	})
</script>
