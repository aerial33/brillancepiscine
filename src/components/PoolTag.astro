---
import TitleSection from "./utilities/TitleSection.jsx"
import { Icon } from "astro-icon"
import { getEntryBySlug } from "astro:content"

const manhattan = await getEntryBySlug("pools", "p1-manhattan")
const lagoon = await getEntryBySlug("pools", "t6-lagoon")
const lagoonT = await getEntryBySlug("pools", "t7-lagoontropical")

const titlePoolTag = "Meet With Our Creative Dedicated Team"
const textTitleTag =
	"Lorem ipsum dolor sit amet, consectetur adipiscing elit. In convallis tortor eros. Donec vitae tortor lacus. Phasellus aliquam ante in maximus."
---

<!-- ===== Team Start ===== -->
<section class="relative overflow-hidden py-20 lg:py-25 xl:py-30">
	<!-- Bg Shapes -->
	<span class="absolute left-0 top-0 -z-1 block h-3/5 w-full bg-whiter"></span>
	<img
		src="./images/shape/shape-08.svg"
		alt="Shape Bg"
		class="absolute right-0 top-0 -z-1"
	/>
	<img
		src="./images/shape/shape-09.svg"
		alt="Shape"
		class="absolute left-[10%] top-1/2 animate-rotating"
	/>
	<img
		src="./images/shape/shape-10.svg"
		alt="Shape"
		class="absolute left-[20%] top-[5%]"
	/>
	<img
		src="./images/shape/shape-11.svg"
		alt="Shape"
		class="absolute right-[15%] top-[15%] animate-rotating"
	/>

	<!-- Section Title Start -->
	<TitleSection
		title={titlePoolTag}
		titleText={textTitleTag}
		headerLevel={"h2"}
	/>
	<!-- Section Title End -->

	<div
		class="relative z-10 mx-auto mt-12.5 max-w-1390 px-4 md:px-8 lg:mt-17.5 xl:px-26">
		<div
			class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 lg:gap-12.5">
			<!-- Pool Fond Plat -->
			<div class="animate_top text-center">
				<div
					class="group relative z-1 overflow-hidden rounded bg-gradient-to-t from-black/50 to-black/10">
					<img
						class="w-full rounded mix-blend-overlay"
						src={manhattan.data.url}
						alt="Team"
					/>
					<h4
						class="absolute bottom-0 left-0 right-0 top-0 flex items-center justify-center text-xl text-whiter md:text-title-sm">
						Piscines fond plat
					</h4>

					<div
						class="translate-y-25 duration-300 ease-linear group-hover:translate-y-0">
						<span
							class="absolute -bottom-21 -left-5 z-20 block h-37.5 w-[120%] rotate-6 bg-primary"
						></span>
						<span
							class="absolute bottom-0 left-0 z-10 block h-17 w-full bg-secondary"
						></span>
						<div class="absolute bottom-0 left-0 z-30 w-full pb-5 pt-7.5">
							<div class="group/item flex items-center justify-center">
								<a
									href="/piscines/"
									class="font-semibold text-whiter duration-300 ease-in-out group-hover/item:text-secondary">
									Découvrir
								</a>
								<Icon
									name="ic:baseline-keyboard-arrow-right"
									width="24"
									class="text-white duration-300 ease-in-out group-hover/item:translate-x-0.5 group-hover/item:text-secondary"
								/>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Pool Fond Incliné  -->
			<div class="animate_top text-center">
				<div
					class="group relative z-1 overflow-hidden rounded bg-gradient-to-t from-black/50 to-black/10">
					<img
						class="h-full w-full rounded mix-blend-overlay"
						src={lagoon.data.url}
						alt="Team"
					/>
					<h4
						class="absolute bottom-0 left-0 right-0 top-0 flex items-center justify-center text-xl text-whiter md:text-title-sm">
						Piscines Fond Incliné
					</h4>

					<div
						class="translate-y-25 duration-300 ease-linear group-hover:translate-y-0">
						<span
							class="absolute -bottom-21 -left-5 z-20 block h-37.5 w-[120%] rotate-6 bg-primary"
						></span>
						<span
							class="absolute bottom-0 left-0 z-10 block h-17 w-full bg-secondary"
						></span>
						<div class="absolute bottom-0 left-0 z-30 w-full pb-5 pt-7.5">
							<div class="group/item flex items-center justify-center">
								<a
									href="/piscines/"
									class="font-semibold text-whiter duration-300 ease-in-out group-hover/item:text-secondary">
									Découvrir
								</a>
								<Icon
									name="ic:baseline-keyboard-arrow-right"
									width="24"
									class="text-white duration-300 ease-in-out group-hover/item:translate-x-0.5 group-hover/item:text-secondary"
								/>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Service Installation -->
			<div class="animate_top text-center">
				<div
					class="group relative z-1 overflow-hidden rounded bg-gradient-to-t from-black/50 to-black/10">
					<img
						class="w-full rounded mix-blend-overlay"
						src={lagoonT.data.url}
						alt="Team"
					/>
					<h4
						class="absolute bottom-0 left-0 right-0 top-0 flex items-center justify-center text-xl text-whiter md:text-title-sm">
						Service Installation
					</h4>

					<div
						class="translate-y-25 duration-300 ease-linear group-hover:translate-y-0">
						<span
							class="absolute -bottom-21 -left-5 z-20 block h-37.5 w-[120%] rotate-6 bg-primary"
						></span>
						<span
							class="absolute bottom-0 left-0 z-10 block h-17 w-full bg-secondary"
						></span>
						<div class="absolute bottom-0 left-0 z-30 w-full pb-5 pt-7.5">
							<div class="group/item flex items-center justify-center">
								<a
									href="/piscines/"
									class="font-semibold text-whiter duration-300 ease-in-out group-hover/item:text-secondary">
									Découvrir
								</a>
								<Icon
									name="ic:baseline-keyboard-arrow-right"
									width="24"
									class="text-white duration-300 ease-in-out group-hover/item:translate-x-0.5 group-hover/item:text-secondary"
								/>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- ===== Team End ===== -->
