---
import featureData from "../data/featureData"
import { Icon } from "astro-icon"

---

<section id="features">
	<div class="mx-auto mt-12.5 max-w-1390 px-4 md:px-7.5 lg:mt-17.5 2xl:px-12.5">
		<div
			class="flex flex-wrap justify-center gap-7.5 lg:justify-between lg:gap-5 xl:flex-nowrap xl:gap-7.5">
			<!-- Small Features Item -->
			{
				featureData.map(feature => (
					<div class="animate_top xl:gap-7.5 flex gap-5 md:w-[45%] xl:w-1/3 xl:flex-col xl:items-center">
						<div class=` h-21 w-21 ${feature.badgeColor} flex shrink-0 items-center justify-center rounded-full text-white ` >
							<Icon name={feature.icon.name} alt={feature.icon.alt} width={feature.icon.width} />
						</div>
						<div>
							<h4 class="text-accent  md:text-title-sm mb-2.5 text-xl font-medium xl:text-center">
								{feature.title}
							</h4>
							<p class="xl:text-center">
								{feature.description}
							</p>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
