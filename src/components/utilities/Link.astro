---
//todo place Link on pages with links

import { Icon } from "astro-icon"

interface Props {
	text: string
	href: string
	isBtnLg?: boolean
	icon?: {
		name: string
		side: "left" | "right"
	}
	isFilled?: boolean
	borderVisible?: boolean
	classes?: string
	id?: string
}

const {
	text,
	href,
	isBtnLg,
	icon,
	isFilled = false,
	borderVisible = false,
	classes,
	id,
	...rest
}: Props = Astro.props
---

<a
	href={href}
	class:list={[
		"link",
		classes,
		{ "btn-lg": isBtnLg, filled: isFilled, bordered: borderVisible },
	]}
	id={id}
	{...rest}>
	{
		icon && icon.side === "left" && (
			<Icon name={icon.name} height="24" width="24" />
		)
	}

	<span>{text}</span>

	{
		icon && icon.side === "right" && (
			<Icon name={icon.name} height="24" width="24" />
		)
	}
</a>
