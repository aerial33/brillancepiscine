---
import MainLayout from "../layouts/MainLayout.astro"
import { Forms } from "../components/utilities"
import { HeaderPage } from "../components/"
import { Icon } from "astro-icon"
import { siteParams } from "../data/siteData"

const { name, email, phone, location, horaire } = siteParams
const title = "Contacter Douceur Piscine à Bordeaux"
const titleText =
	"Contactez notre agence à St Jean D'Illac près de Bordeaux. Nous somme à votre disposition et assurons votre projet et le service apres vente sur le secteur de la gironde rive droite."

//todo write a description metatag
---

<MainLayout title="Votre devis piscine coque">
	<main class="relative pt-15 lg:pt-20 xl:pt-25">
		<!-- ===== Contact Start ===== -->
		<HeaderPage title={title} titleText={titleText} />
		<section class="relative overflow-hidden py-15 lg:pb-20 lg:pt-0 xl:pb-25">
			<div
				class="relative z-10 mx-auto mt-12.5 max-w-1280 px-4 md:px-8 lg:mt-20 xl:px-9">
				<div
					class="flex flex-col-reverse flex-wrap gap-7.5 lg:flex-row lg:flex-nowrap lg:justify-between xl:gap-10">
					<!-- Infos society start -->
					<div
						class="animate_top relative w-full overflow-hidden rounded-lg bg-white p-7.5 shadow-3 lg:w-1/3 xl:p-12.5">
						<!-- Bg Shapes -->
						<img
							src="/images/shape/shape-03.svg"
							alt="Shape"
							class="absolute right-5 top-5 w-7.5"
						/>
						<img
							src="/images/shape/shape-06.svg"
							alt="Shape"
							class="absolute bottom-5 right-5 w-6 rotate-180"
						/>

						<div class="mb-10">
							<h4 class="mb-1.5 text-title-xsm text-accent">
								<Icon name="ph:map-pin-line-light" width="32" />
								{name}
							</h4>
							<p>
								{location.adresse}
							</p>
							<p>
								{location.city}
							</p>
						</div>
						<div class="mb-10 flex gap-2">
							<h4 class="mb-1.5 text-title-xsm text-black">
								<Icon name="ph:phone-disconnect-light" width="32" />
							</h4>
							<p class="text-blacksection">
								<a
									href="tel:0556926206"
									class="transition-color duration-200 hover:text-primary"
									>{phone}</a
								>
							</p>
						</div>
						<div class="mb-10">
							<h4
								class="mb-1.5 flex items-center gap-2 text-title-xsm text-black">
								<Icon name="ph:calendar-check-light" width="32" />
								Horaire d'ouverture
							</h4>
							<p>{horaire}</p>
						</div>

						<div class="mb-10">
							<h4
								class="mb-1.5 flex items-center gap-2 text-title-xsm text-black">
								<Icon name="ph:envelope-thin" width="32" />

								Contact par Email
							</h4>
							<p>
								<a href=`mailto:${email}` class="hover:text-primary">{email}</a>
							</p>
						</div>

						<span class="mb-10 mt-5 block h-[1px] bg-strokedark"></span>

						<div>
							<h4 class="mb-7.5 text-title-xsm text-black">Réseaux Sociaux</h4>
							<ul class="flex items-center justify-center gap-4">
								<li>
									<a
										href="https://www.facebook.com/douceurpiscinepolyester"
										class="group flex h-10 w-10 items-center justify-center rounded-full duration-300 ease-in-out hover:bg-primary">
										<Icon
											name="ph:facebook-logo-light"
											width="32"
											class="fill-body duration-300 ease-in-out group-hover:text-white"
										/>
									</a>
								</li>
								<li>
									<a
										href="https://www.instagram.com/explore/tags/douceurpiscine/"
										class="group flex h-10 w-10 items-center justify-center rounded-full duration-300 ease-in-out hover:bg-primary">
										<Icon
											name="ph:instagram-logo-light"
											width="32"
											class="fill-body duration-300 ease-in-out group-hover:text-white"
										/>
									</a>
								</li>
								<!-- <li>
									<a
										href="#"
										class="group flex h-10 w-10 items-center justify-center rounded-full duration-300 ease-in-out hover:bg-primary">
										<Icon
											name="ph:youtube-logo-light"
											width="32"
											class="fill-body duration-300 ease-in-out group-hover:text-white"
										/>
									</a>
								</li> -->
							</ul>
						</div>
					</div>
					<!-- Infos society end  -->
					<div
						class="animate_top w-full rounded-lg bg-white p-7.5 shadow-3 lg:w-2/3 xl:p-14">
						<h2 class="mb-3 flex items-center gap-2 text-title-xsm text-accent">
							Bénéficiez d'une Consultation Personnalisée
							<Icon name="ph:chat-circle-dots-light" width="32" />
						</h2>
						<p class="mb-3 pb-5 text-sm font-thin lg:text-base">
							Notre équipe qualifiée est à votre disposition pour répondre à
							toutes vos questions concernant votre projet de piscine, y compris
							l'utilisation et le traitement des bassins. Nous sommes également
							en mesure de vous fournir des informations sur la création de
							votre projet, son développement, ainsi que sur les évolutions
							possibles pour un bassin existant.
						</p>
						<Forms />
					</div>
					<!-- Forms end -->
				</div>
			</div>
		</section>
		<!-- ===== Contact End ===== -->
	</main>
</MainLayout>
